<%= form_for(river, remote: true) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: t(:fill_in_the_title) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.text_area :content, class: "form-control",  placeholder: t(:fill_in_the_content) %>
      </div>
    </div>
  </div>

  <div class="text-right">
    <button type="submit" class="btn btn-sm btn-primary"><%=t :submit%></button>
  </div>
<% end %>
